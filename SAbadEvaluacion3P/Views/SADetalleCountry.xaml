<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAbadEvaluacion3P.Views.SADetalleCountry"
             Title="SADetalleCountry">
    
    <StackLayout Padding="10">
        <Button Text="Cargar País"
                Command="{Binding LoadCountryAsync}" />
        <Label Text="Nombre:" FontSize="16" />
        <Label Text="{Binding Name.Common}" FontSize="18" />

        <Label Text="Capital:" FontSize="16" />
        <Label Text="{Binding Capital[0]}" FontSize="18" />

        <Label Text="Región:" FontSize="16" />
        <Label Text="{Binding Region}" FontSize="18" />

        <Label Text="Subregión:" FontSize="16" />
        <Label Text="{Binding Subregion}" FontSize="18" />
    </StackLayout>
</ContentPage>